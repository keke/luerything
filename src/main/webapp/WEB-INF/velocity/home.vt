<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/> ## common
  <title>$messageSource.getMessage("home.title",null, $locale)</title>
  <link rel="stylesheet" type="text/css" href="${ctxRoot}_s/css/luerything.css"/>
  <script type="text/javascript">
    window.config = {
      #if ($debug)
        debug:true,
      #end
      ctxRoot: "$ctxRoot",
      appRoot:"$appRoot"
    }
  </script>

## templates

  <script id="list-entry-template" type="text/x-jquery-tmpl">
    <div class="item" id="item-${id}">
      <div class="title click">${name}</div>
    </div>
  </script>

</head>
<body>
<div id="head">
  <div id="topbar">
    <span class="click action" id="update-all">Update all</span>

    <div class="clear"></div>
  </div>
  <h1 class="title">Luerything</h1>
</div>
<div id="main">
  <div id="searchbar">
    <form name="search">
      <input name="q" type="search" placeholder="$messageSource.getMessage('label.searchplaceholder', null, $locale)"/>
    </form>
  </div>
  <div class="container">
    <div id="nav" class="panel"></div>
    <div id="list" class="panel"></div>
    <div id="detail" class="panel"></div>
  </div>
</div>

## put the scripts here

<script type="text/javascript" src="${ctxRoot}_s/js/modernizer/modernizr.custom.js"></script>
  #if($debug)
  <script type="text/javascript" src="${ctxRoot}_s/js/loader.js"></script>
  #else
  <script type="text/javascript" src="${ctxRoot}_s/js/loader.min.js"></script>
  #end
</body>
</html>